<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WRUInterestedActivity"
    android:background="@drawable/fondoazul">

    <LinearLayout
        android:id="@+id/buttonsidLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/style_form_login"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="italic"
            android:text="WHAT ARE YOU INTERESTED IN?" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsWRAII"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_below="@id/buttonsidLinearLayout">

       <RelativeLayout
           android:layout_width="130dp"
           android:layout_height="70dp"
           android:background="@drawable/boton7"
           android:layout_marginTop="25dp"
           android:layout_marginLeft="25dp">
           <TextView
               android:id="@+id/textView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginTop="17dp"
               android:text="Age:"
               android:textSize="28dp"
               android:textStyle="bold"/>


       </RelativeLayout>

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="220dp"
            android:hint="Your age"
            android:gravity="center"
            android:inputType="number"
            />
        <RelativeLayout
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:background="@drawable/boton7"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:text="People:"
                android:textSize="28dp"
                android:textStyle="bold"/>

        </RelativeLayout>


    </LinearLayout>

    <ImageButton
    android:id="@+id/hombres"
    android:layout_width="99dp"
    android:layout_height="137dp"
    android:layout_below="@id/buttonsWRAII"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="65dp"
    app:srcCompat="@drawable/hombres" />
    <ImageButton
        android:id="@+id/ambos"
        android:layout_width="99dp"
        android:layout_height="137dp"
        android:layout_below="@id/buttonsWRAII"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="65dp"
        app:srcCompat="@drawable/ambos" />
    <ImageButton
        android:id="@+id/mujeres"
        android:layout_width="99dp"
        android:layout_height="137dp"
        android:layout_below="@id/buttonsWRAII"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="65dp"
        app:srcCompat="@drawable/mujeres" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_below="@id/mujeres"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="115dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@drawable/boton3"/>


</RelativeLayout>

