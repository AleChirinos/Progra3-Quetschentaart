<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fce4ec"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/profilebackground"
            android:padding="7dp">
            <ImageView
                android:id="@+id/photoperfilcardview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/profile1">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/namecardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/user"
                    android:textColor="@color/black"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:id="@+id/timecardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="21:48">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/messagecardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/userbackground"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:text=" Hola bienvenid@">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>