<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentContactLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA42A1"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:background="#EA42A1">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/photo_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:src="@drawable/photo1" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="70"
        android:background="#EA42A1"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/rounded_borders_contact_name">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_marginStart="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:textSize="35dp"
                tools:text="Name"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_borders_contact_career_age"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/careerTextView"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:fontFamily="@font/andada"
                android:textSize="25dp"
                tools:text="Career" />

            <TextView
                android:id="@+id/ageTextView"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:fontFamily="@font/andada"
                android:textSize="25dp"
                tools:text="Age" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
