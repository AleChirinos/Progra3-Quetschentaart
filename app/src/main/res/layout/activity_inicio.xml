<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity"
    android:background="#f2f6ff"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">
    <LinearLayout
        android:id="@+id/buttonsidLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fondo_inte"
        android:padding="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="246dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/boton3"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="246dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/boton_done"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/buttonsidLinearLayout">


        <ImageView
            android:id="@+id/imageinicio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_margin="20dp"
            android:src="@drawable/inicio" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:src="@drawable/titulo">
        </ImageView>
    </LinearLayout>

</RelativeLayout>